{
  "name": "vscode-clockify",
  "displayName": "Clockify",
  "description": "Start Clockify timers in VS Code.",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clockify",
          "title": "Clockify",
          "icon": "resources/clockify.svg"
        }
      ],
      "secondarySidebar": [
        {
          "id": "clockifySecondary",
          "title": "Clockify",
          "icon": "resources/clockify.svg"
        }
      ]
    },
    "views": {
      "clockify": [
        {
          "type": "webview",
          "id": "clockifyView",
          "name": "Clockify"
        }
      ],
      "clockifySecondary": [
        {
          "type": "webview",
          "id": "clockifyViewSecondary",
          "name": "Clockify"
        }
      ]
    },
    "commands": [
      {
        "command": "clockify.startTimer",
        "title": "Start timer"
      },
      {
        "command": "clockify.stopTimer",
        "title": "Stop timer"
      },
      {
        "command": "clockify.dailySummary",
        "title": "Clockify: Show Daily/Weekly Summary"
      },
      {
        "command": "clockify.timeEntryHistory",
        "title": "Clockify: Resume from History"
      },
      {
        "command": "clockify.setApiKey",
        "title": "Clockify: Set API Key"
      },
      {
        "command": "clockify.openSettings",
        "title": "Clockify: Open Settings"
      }
    ],
    "configuration": {
      "title": "Clockify",
      "properties": {
        "clockify.quickStartWithLastSelection": {
          "type": "boolean",
          "default": false,
          "description": "Start immediately with the last selection for the current repo."
        },
        "clockify.skipPickIfSingle": {
          "type": "boolean",
          "default": true,
          "description": "Skip the workspace picker when there is only one workspace."
        },
        "clockify.defaultWorkspaceId": {
          "type": "string",
          "default": "",
          "description": "Default Clockify workspace id."
        },
        "clockify.defaultProjectId": {
          "type": "string",
          "default": "",
          "description": "Default Clockify project id."
        },
        "clockify.defaultTaskId": {
          "type": "string",
          "default": "",
          "description": "Default Clockify task id."
        },
        "clockify.defaultTagIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Default Clockify tag ids."
        },
        "clockify.workspaceId": {
          "type": "string",
          "default": "",
          "description": "Legacy: Clockify workspace id (prefer clockify.defaultWorkspaceId)."
        },
        "clockify.repoMappings": {
          "type": "array",
          "default": [],
          "description": "Repo to project/task mapping objects like { \"repo\": \"owner/name\", \"projectId\": \"...\", \"taskId\": \"...\", \"tagIds\": [\"...\"] }."
        }
      }
    }
  }
}
