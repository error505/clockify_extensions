{
  "name": "vscode-clockify",
  "displayName": "Clockify for GitHub Issues",
  "description": "Start Clockify timers based on GitHub issue context.",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:clockify.startTimer",
    "onCommand:clockify.stopTimer",
    "onCommand:clockify.setApiKey",
    "onCommand:clockify.openSettings",
    "onView:clockifyView",
    "onView:clockifyViewSecondary"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clockify",
          "title": "Clockify",
          "icon": "resources/clockify.svg"
        }
      ],
      "secondarySideBar": [
        {
          "id": "clockifySecondary",
          "title": "Clockify",
          "icon": "resources/clockify.svg"
        }
      ]
    },
    "views": {
      "clockify": [
        {
          "id": "clockifyView",
          "name": "Clockify"
        }
      ],
      "clockifySecondary": [
        {
          "id": "clockifyViewSecondary",
          "name": "Clockify"
        }
      ]
    },
    "commands": [
      {
        "command": "clockify.startTimer",
        "title": "Clockify: Start Timer for Issue"
      },
      {
        "command": "clockify.stopTimer",
        "title": "Clockify: Stop Timer"
      },
      {
        "command": "clockify.setApiKey",
        "title": "Clockify: Set API Key"
      },
      {
        "command": "clockify.openSettings",
        "title": "Clockify: Open Settings"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "clockify.startTimer",
          "group": "clockify@1"
        },
        {
          "command": "clockify.stopTimer",
          "group": "clockify@2"
        }
      ],
      "editor/title": [
        {
          "command": "clockify.startTimer",
          "group": "navigation@9"
        },
        {
          "command": "clockify.stopTimer",
          "group": "navigation@10"
        }
      ],
      "view/title": [
        {
          "command": "clockify.startTimer",
          "group": "navigation@9"
        },
        {
          "command": "clockify.stopTimer",
          "group": "navigation@10"
        }
      ],
      "view/item/context": []
    },
    "configuration": {
      "title": "Clockify",
      "properties": {
        "clockify.quickStartWithLastSelection": {
          "type": "boolean",
          "default": false,
          "description": "Start immediately with the last selection for the current repo."
        },
        "clockify.skipPickIfSingle": {
          "type": "boolean",
          "default": true,
          "description": "Skip the workspace picker when there is only one workspace."
        },
        "clockify.defaultWorkspaceId": {
          "type": "string",
          "default": "",
          "description": "Default Clockify workspace id."
        },
        "clockify.defaultProjectId": {
          "type": "string",
          "default": "",
          "description": "Default Clockify project id."
        },
        "clockify.defaultTaskId": {
          "type": "string",
          "default": "",
          "description": "Default Clockify task id."
        },
        "clockify.defaultTagIds": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Default Clockify tag ids."
        },
        "clockify.workspaceId": {
          "type": "string",
          "default": "",
          "description": "Legacy: Clockify workspace id (prefer clockify.defaultWorkspaceId)."
        },
        "clockify.repoMappings": {
          "type": "array",
          "default": [],
          "description": "Repo to project/task mapping objects like { \"repo\": \"owner/name\", \"projectId\": \"...\", \"taskId\": \"...\", \"tagIds\": [\"...\"] }."
        }
      }
    }
  }
}
